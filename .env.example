# FinPal Environment Variables
# Copy this file to .env.local and fill in your actual values

# =======================
# Plaid API Configuration
# =======================
# Get your API keys from: https://dashboard.plaid.com/
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox  # Use 'sandbox' for testing, 'production' for live

# =======================
# AI / LLM Configuration
# =======================
# Choose ONE of these based on your preference:

# Option 1: Google Gemini
GEMINI_API_KEY=your_gemini_api_key_here

# Option 2: OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# =======================
# Database Configuration
# =======================
# For production, use Supabase or PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database

# Supabase (Recommended)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

